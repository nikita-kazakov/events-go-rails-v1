<div class="container">
  <h1>Show Page</h1>

  <div class="row flex-column flex-md-row">

    <div class="col">
      <%= image_tag("placeholder400.png", class: "card-img-top")  %>
    </div>

    <div class="col">

      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col">Label</th>
          <th scope="col">Value</th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <th scope="row">Name</th>
          <td><%=@event.name %></td>
        </tr>

        <tr>
          <th scope="row">Description</th>
          <td><%=@event.description %></td>
        </tr>

        <tr>
          <th scope="row">Location</th>
          <td><%=@event.location %></td>
        </tr>

        <tr>
          <th scope="row">Price</th>
          <td><%=price_view(@event) %></td>
        </tr>

        <tr>
          <th scope="row">Start Date</th>
          <td><%= @event.starts_at.time.to_formatted_s(:long) %></td>
        </tr>

        </tbody>
      </table>

      <div class="d-flex">
        <%= link_to "All Movies", events_path, class:"btn btn-primary mr-2" %>
        <%= link_to "Edit", edit_event_path(@event), class:"btn btn-primary mr-2" %>
        <%= link_to "Delete", edit_event_path(@event), class:"btn btn-primary", method: :delete %>
      </div>

    </div>

  </div>


</div>
