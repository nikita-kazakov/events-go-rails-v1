<div class="row flex-column flex-md-row">

  <div class="col">
    <%= image_tag("placeholder400.png", class: "card-img-top")  %>
  </div>

  <div class="col">

    <table class="table table-striped">
      <thead>
      <tr>
        <th scope="col">Label</th>
        <th scope="col">Value</th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <th scope="row">Name</th>
        <td><%=@event.name %></td>
      </tr>

      <tr>
        <th scope="row">Description</th>
        <td><%=@event.description %></td>
      </tr>

      <tr>
        <th scope="row">Location</th>
        <td><%=@event.location %></td>
      </tr>

      <tr>
        <th scope="row">Price</th>
        <td><%=price_view(@event) %></td>
      </tr>

      <tr>
        <th scope="row">Start Date</th>
        <td><%= @event.starts_at%></td>
      </tr>

      <tr>
        <th scope="row">Seats Remaining</th>
        <td><%= @event.capacity %></td>
      </tr>



      </tbody>
    </table>

    <div class="d-flex">

      <%=register_for(@event) %>
      <%= link_to "All Movies", events_path, class:"btn btn-primary mr-2" %>
      <%= link_to "Edit", edit_event_path(@event), class:"btn btn-primary mr-2" %>
      <%= link_to "Delete", event_path, class:"btn btn-primary mr-2", method: :delete, data:{confirm:"Are you sure?"} %>
      <%= link_to "All Registrations", event_registrations_path(@event), class:"btn btn-primary mr-2" %>
    </div>

  </div>

</div>


