
<section>
  <div class="container w-70 ml-auto mr-auto">
    <%=link_to "Add New Event", new_event_path %>
    <h1 class="f-2">Hi</h1>

      <%@events.each do |event| %>
        <div class="flex">
          <div class="mr2">Name:</div>
          <div><%= event.name%></div>
        </div>

        <div class="flex">
          <div class="mr2">Location:</div>
          <div><%= event.location%></div>
        </div>

        <div class="flex">
          <div class="mr2">Price:</div>
          <div><%= price_view(event)%></div>
        </div>

        <div class="flex">
          <div class="mr2">Starts At:</div>
          <div><%= event.starts_at%></div>
        </div>

        <div class="flex">
          <div class="mr2">Description:</div>
          <div><%= truncate(event.description, length: 50, separator: " ") %></div>
        </div>

        <br>
        <%=link_to "Show", event_path(event) %>
        <br>
        <br>
        <br>

      <% end %>
  </div>
</section>